<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splashbackground"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/habitpadLogo"
        android:layout_width="216dp"
        android:layout_height="265dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/habitpad2">

    </ImageView>

    <TextView
        android:id="@+id/habitpadName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/habitpadLogo"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Habitpad"
        android:textSize="55sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/habitpadName"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Habit-Change App for Obese Patient"
        android:textColor="#666666"
        android:textSize="20sp" />

</RelativeLayout>